button {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: auto;
  padding: 0;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  color: #ffff;
  background: var(--color-primary);
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  transition: transform .3s ease-in-out;
}

button::after {
  display: none;
}

.custom-icon {
  vertical-align: middle !important;
}