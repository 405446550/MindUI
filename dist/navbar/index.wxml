<view class="tabs__item tab__item--is-active" bind:tap="onClick">
  <view class="tabs__item__content">
    <view class="tabs__item__text" style="{{ activeColor ? 'color:' + activeColor: '' }}">
      {{ title }}
      <m-badge wx:if="{{ value }}" custom-class="badge-custom" value="{{ value }}" static></m-badge>
    </view>
  </view>
</view>
